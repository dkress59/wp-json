{
    "compilerOptions": {
        "baseUrl": "./",
        "esModuleInterop": true,
        "lib": [
            "ESNext"
        ],
        "module": "commonjs",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "typeRoots": [
            "./dist"
        ],
    },
    "exclude": [
        ".yarn",
    ],
    "include": [
        ".eslintrc.js",
        "./dist/*.ts",
        "./src/*.ts",
    ]
}